{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "npm run build && node server.cjs",
    "type-check": "tsc --noEmit",
    "eslint": "npx eslint 'src/**/*.{js,ts}' && npm run type-check",
    "eslint:fix": "npx eslint 'src/**/*.{js,ts}' --fix && npm run type-check",
    "stylelint": "npx stylelint '**/*.scss'",
    "stylelint:fix": "npx stylelint '**/*.scss' --fix",
    "lint": "npx eslint 'src/**/*.{js,ts}' && npx stylelint '**/*.scss' && npm run type-check",
    "lint:fix": "npx eslint 'src/**/*.{js,ts}' --fix && npx stylelint '**/*.scss' --fix && npm run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.31.0",
    "sass": "^1.81.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-scss": "^6.10.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "express": "^4.21.1",
    "handlebars": "^4.7.8"
  }
}
